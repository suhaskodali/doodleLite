<p id="notice"><%= notice %></p>

<h1>Shows the user and their polls</h1>


<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
  <strong>Password:</strong>
  <%= @user.password %>
</p>

  <div class="col-md-8">
    <% if @user.polls.any? %>
      <h3>Polls (<%= @user.polls.count %>)</h3>
      <ol class="polls">
        <%= render @polls %>
      </ol>
 
    <% end %>
  </div>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
